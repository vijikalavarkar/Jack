pipeline{
    agent any
    stages{
        stage('hostname'){
            steps{
                sh '''
                    hostname
                '''
            }
        }
        stage('Server Details'){
            steps{
                sh '''
                    uname -a
                '''
            }
        }
        stage('Memory'){
            steps{
                sh '''
                    free -h
                '''
            }
        }
    }
}